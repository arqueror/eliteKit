<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:eliteKit="clr-namespace:eliteKit.eliteElements;assembly=eliteKit"
             x:Class="eliteKitDevelopment.appPages.eliteButtonTest">
    <ContentPage.Content>
        <Grid>
            <eliteKit:eliteButton
            HorizontalOptions="Center" 
            VerticalOptions="Center"
            WidthRequest = "300"
            HeightRequest="60"
            HasShadow="True"
            FontSize="25"
            IsGradient ="True" 
            ColorPrimary = "#548EC1"
            ColorSecondary = "#254867"
            ColorText = "White"
            ButtonRadius="35"
            ButtonTitle = "eliteButton"
            TextAlign="Center"
            />
        </Grid>
    </ContentPage.Content>
</ContentPage>